{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended" // Use recommended rules for Node.js environment
  ],
  "parserOptions": {
      "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "rules": {
      // Enforce the use of semicolons at the end of statements
      "semi": ["error", "always"],
      // Require variables to be initialized when declared
      "init-declarations": "error",
      // Disallow unused parameters in functions
      "no-unused-vars": ["error", { "args": "none" }],
      "node/no-unpublished-import": ["error", {
        "allowModules": ["ftp-deploy"]
    }],  "node/no-unpublished-require": "off"
  }
}
